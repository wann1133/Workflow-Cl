name: iris-workflow-ci

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: string, default: "namadataset_preprocessing/breast_cancer_preprocessed.csv"}
      test_size: {type: float, default: 0.2}
      random_state: {type: integer, default: 42}
      max_iter: {type: integer, default: 200}
      C: {type: float, default: 1.0}
    command: "python modelling.py --data_path {data_path} --test_size {test_size} --random_state {random_state} --max_iter {max_iter} --C {C}"
